global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "blue-node"
    static_configs:
      - targets: ['{{ lookup("pipe", "terraform output -raw blue_ip") }}:9100']

  - job_name: "green-node"
    static_configs:
      - targets: ['{{ lookup("pipe", "terraform output -raw green_ip") }}:9100']
